{{#extend 'stylesheets'}}
	<link rel="stylesheet" type="text/css" href="/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="/plugins/OwlCarousel2-2.2.1/animate.css">

	<link rel="stylesheet" type="text/css" href="/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="/styles/responsive.css">
        
{{/extend}}


<div class="container">
	<div class="row">

	 	<!-- Main Content -->

		<div class="col-lg-9">
			<div class="main_content">
				
				{{#categories_posts}}
					{{#ifCond category "==" "Videos"}}
						<!-- World -->

						<div class="world">
							<div class="section_title_container d-flex flex-row align-items-start justify-content-start">
								<div>
									<div class="section_title">From the {{category}}</div>
									<div class="section_subtitle">Handpicked articles</div>
								</div>
								<!--div class="section_bar"></div-->
							</div>
							<div class="section_bar"></div>

							<div class="row world_row">
								<div class="col-lg-11">
									<div class="row">
										{{#posts}}

											<div class="col-lg-6">
												
												<!-- Post -->
												<div class="post_item post_v_med d-flex flex-column align-items-start justify-content-start">
													<div class="post_image"><img src="/uploads/images/{{image}}" alt="https://unsplash.com/@oria_hector"></div>
													<div class="post_content">
														<div class="post_category cat_technology"><a href="/categories/{{category.title}}">{{category.title}}</a></div>
														<div class="post_title"><a href="/posts/view/{{_id}}">{{title}}</a></div>
														<div class="post_info d-flex flex-row align-items-center justify-content-start">
															<div class="post_author d-flex flex-row align-items-center justify-content-start">
																<div><div class="post_author_image"><img src="/images/author_1.jpg" alt=""></div></div>
																<div class="post_author_name"><a href="#">{{author}}</a></div>
															</div>
															<div class="post_date"><a href="#">{{moment created_at }}</a></div>
															<div class="post_comments ml-auto"><a href="#">{{count comments}} comments</a></div>
														</div>
														<!-- <div class="post_text">
															<p>Curabitur venlorem in libero.</p>
														</div> -->
													</div>
												</div>
											</div>
										{{/posts}}
									</div>
								</div>
							</div>
						</div>

						
					{{else}}
						<!-- Technology -->
						<div class="technology">
							<div class="section_title_container d-flex flex-row align-items-start justify-content-start">
								<div>
									<div class="section_title">From the {{category}}</div>
									<div class="section_subtitle">Handpicked articles</div>
								</div>
								<!--div class="section_bar"></div-->
							</div>
							<div class="section_bar"></div>

							<div class="technology_content">
								
								{{#posts}}
									<!-- Post -->
								<div class="post_item post_h_large">
									<div class="row">
										<div class="col-lg-5">
											<div class="post_image"><img src="/uploads/blogs/{{image}}" alt="https://unsplash.com/@jmckinven"></div>
										</div>
										<div class="col-lg-7">
											<div class="post_content">
												<div class="post_category cat_technology"><a href="/categories/{{category.title}}">{{category.title}}</a></div>
												<div class="post_title"><a href="/posts/view/{{_id}}">{{title}}</a></div>
												<div class="post_info d-flex flex-row align-items-center justify-content-start">
													<div class="post_author d-flex flex-row align-items-center justify-content-start">
														<div><div class="post_author_image"><img src="/images/author_1.jpg" alt=""></div></div>
														<div class="post_author_name"><a href="#">{{author}}</a></div>
													</div>
													<div class="post_date"><a href="#">{{moment created_at}}</a></div>
													<div class="post_comments ml-auto"><a href="#">{{count comments}} comments</a></div>
												</div>
												<div class="post_text">
													{{{blog_body body _id}}}
												</div>
											</div>
										</div>
									</div>	
								</div>
								{{/posts}}


							</div>
						</div>
					{{/ifCond}}

					<!-- Load more button -->
					<ul class="pagination align-items-center" align='center' style='width:auto'>
						<li ><a href="/categories/{{category}}" style=' color:#fff;' class='load_more_button btn  btn-lg btn-noborder-radius'>load more from {{category}}</a></li>
					</ul>

				{{/categories_posts}}
				
			</div>
		</div>

		<!-- Sidebar -->

		<!-- <div class="col-lg-3"> -->
			{{> aside}}
		<!-- </div> -->

	</div>
</div>

{{#extend 'scripts'}}

    <script src="/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
	<script src="/js/custom.js"></script>
{{/extend}}